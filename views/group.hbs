<script type="text/javascript" src="/js/borga-group.js"></script>
<div class="form-floating flex">
    <h1>Group {{name}}</h1>
    <form method="get" action= '/groups/{{name}}/games'>
        <legend> Search For Game </legend>
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="Game Name" name="name" required>
            </div>
            <div class="col">
                <input type="submit" class="form-control btn-primary" value="Search Game">
            </div>
        </div>
    </form>

    <table class="table">
    <thead>
        <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Mechanics</th>
        <th scope="col">Categories</th>
        </tr>
    </thead>
    <tbody>
        {{#each games}}
            {{>game_group}}
        {{/each}}
    </tbody>
    </table>
</div>